<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Valid Day: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="5"
                    android:ems="10"
                    android:id="@+id/validDaysEditTxt"
                    android:layout_weight="1"
                    android:background="#00ffffff"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Cut Lost Percentage: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:id="@+id/cutPercentageEditText"
                    android:layout_weight="1"
                    android:background="#00ffffff"
                    android:text="0"
                    android:inputType="numberDecimal" />

                <Button
                    android:text="OK"
                    android:layout_width="60dp"
                    android:id="@+id/okBtn"
                    android:layout_weight="1"
                    android:layout_height="40dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Title"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView30" />

                <TextView
                    android:text="Number"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView32"
                    android:layout_width="100dp" />

                <TextView
                    android:text="Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView34"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Total Win: "
                    android:layout_height="wrap_content"
                    android:layout_width="140dp" />

                <TextView
                    android:text="TextView"
                    android:layout_height="wrap_content"
                    android:id="@+id/totalWinNumberTxt"
                    android:layout_width="100dp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/totalWinValueTxt"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Cut Lost: "
                    android:layout_width="140dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="TextView"
                    android:layout_height="wrap_content"
                    android:id="@+id/cutLostNumberTxt"
                    android:layout_width="100dp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cutLostValueTxt"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Lost: "
                    android:layout_height="wrap_content"
                    android:layout_width="140dp" />

                <TextView
                    android:text="TextView"
                    android:layout_height="wrap_content"
                    android:id="@+id/lostNumbTxt"
                    android:layout_width="100dp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lostValueTxt"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Win: "
                    android:layout_width="140dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="TextView"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/winNumbTxt" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/winValueTxt"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Meet Target: "
                    android:layout_width="140dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="TextView"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/meetTargetNumbTxt" />

                <TextView
                    android:text="TextView"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/meetTargetValueTxt"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="BUY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buyTxt"
                    android:elevation="11dp"
                    android:layout_margin="5dp" />

                <TextView
                    android:text="SELL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sellTxt"
                    android:layout_margin="5dp" />

                <TextView
                    android:text="Target: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView36"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="#000000" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tarForeTxt"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:text="Cut Lost: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView38"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:background="#000000" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cutForeTxt"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
